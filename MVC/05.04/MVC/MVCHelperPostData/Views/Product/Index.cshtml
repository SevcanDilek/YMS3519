@model List<MVCHelperPostData.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ürün Adı</th>
                <th>Stok</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.UnitsInStock</td>
                    <td>
                        @Html.ActionLink("Detay","Detail",new { id=product.ProductID},new { @class="btn btn-primary btn-xs"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

