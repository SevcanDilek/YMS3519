
@{
    ViewBag.Title = "Kategori Listesi";
}

<div class="row">
    <h1>@ViewBag.Title</h1>
    <div class="col-lg-12">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>ViewData</h2>
                </div>
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in (ViewData["Categories"] as List<MVCDataTransfer.Models.Category>))
                            {
                                <tr>
                                    <td>@category.ID</td>
                                    <td>@category.CategoryName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>ViewBag</h2>
                </div>
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in ViewBag.Categories)
                           {
                               <tr>
                                   <td>
                                       @item.ID
                                   </td>
                                   <td>
                                       @item.CategoryName
                                   </td>
                               </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

