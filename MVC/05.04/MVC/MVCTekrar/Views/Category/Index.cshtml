@model List<MVCTekrar.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<ul>
    @foreach (var category in Model)
    {
        <li>@category.CategoryName</li>
    }
</ul>


<form method="post">
    <label>Kategori Adı</label>
    <input type="text" placeholder="Kategori Adı Girin" name="kategoriAdi" />
    <button type="submit">Gönder</button>
</form>


