@model List<Shipper>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["success"]</span>
    </div>
}
<div class="card">
    <div class="card-header">
        <h2>Shippers</h2>
        @Html.ActionLink("Create Shipper", "Create", null, new { @class="btn btn-success"})
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Phone Number</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var shipper in Model)
                {
                    <tr>
                        <td>@shipper.ShipperID</td>
                        <td>@shipper.CompanyName</td>
                        <td>@shipper.Phone</td>
                        <td>
                            @Html.ActionLink("Update", "Update", new { id = shipper.ShipperID },new { @class="btn btn-xs btn-warning"})
                            @Html.ActionLink("Delete", "Delete", new { id = shipper.ShipperID },new { @class="btn btn-xs btn-danger"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

